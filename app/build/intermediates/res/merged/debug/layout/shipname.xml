<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
     >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000" >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
            <ImageView
                android:id="@+id/shipImg"
                android:layout_width="270dp"
                android:layout_height="370dp"
                android:src="@drawable/suzuya"   
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/normal_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/normalimgbutton"
                    android:layout_weight="1"
                    android:scaleType="fitXY" 
                    android:background="#88000000"                    
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"/>

                <ImageButton
                    android:id="@+id/broken_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/brokenimgbutton"
                    android:layout_weight="1"
                    android:scaleType="fitXY" 
                    android:background="#88000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>
            
           </LinearLayout>
            
            

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:background="@drawable/shipdata"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/torpedo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275sp"
                        android:layout_marginTop="44sp"
                        android:text="torpedo"
                        android:textColor="@color/blue"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/luck_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275sp"
                        android:layout_marginTop="200sp"
                        android:text="luck"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/fire_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275sp"
                        android:layout_marginTop="3sp"
                        android:text="fire"
                        android:textColor="@color/red"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/aac_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275sp"
                        android:layout_marginTop="80sp"
                        android:text="aac"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/ass_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275sp"
                        android:layout_marginTop="120sp"
                        android:text="ass"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/seek_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="275sp"
                        android:layout_marginTop="160sp"
                        android:text="seek"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/speed_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100sp"
                        android:layout_marginTop="160sp"
                        android:text="speed"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/range_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100sp"
                        android:layout_marginTop="200sp"
                        android:text="range"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/evasion_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100sp"
                        android:layout_marginTop="80sp"
                        android:text="evasion"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/armor_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100sp"
                        android:layout_marginTop="44sp"
                        android:text="armor"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/hp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100sp"
                        android:layout_marginTop="3sp"
                        android:text="hp"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/carry_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100sp"
                        android:layout_marginTop="125sp"
                        android:text="carry"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </RelativeLayout>

        

        

    </LinearLayout>

</LinearLayout>

</FrameLayout>

</ScrollView>